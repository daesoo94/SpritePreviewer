{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es6",
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}